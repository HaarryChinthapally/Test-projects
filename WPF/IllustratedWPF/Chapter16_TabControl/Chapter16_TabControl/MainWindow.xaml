<Window x:Class="Chapter16_TabControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TabControls..." Height="350" Width="525">
    <!-- TabControl is just an ItemsControl -->
    <TabControl Name="simpleTabs">
        <!-- TabItem is just a HeaderedContentControl, where the header is shown in the tab -->
        <TabItem Header="Tab 1">
            <StackPanel>
                <TextBlock>This is the text on tab 1</TextBlock>
            </StackPanel>
        </TabItem>
        <TabItem Header="Tab 2">
            <StackPanel>
                <TextBlock>This is the text on tab 2</TextBlock>
            </StackPanel>
        </TabItem>
        <TabItem Header="Tab 3">
            <StackPanel>
                <TextBlock>This is the text on tab 3</TextBlock>
            </StackPanel>
        </TabItem>
    </TabControl>
</Window>
