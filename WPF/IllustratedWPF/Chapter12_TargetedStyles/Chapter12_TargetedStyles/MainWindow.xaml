<Window x:Class="Chapter12_TargetedStyles.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
    </Window.Resources>
    
    <StackPanel>
        <!-- see how styles are automatically applied to the target (Button), with no explicit declaration needed-->
        <Button>The Button</Button>
        <Button>Another Button</Button>
        <Label>The Targeted Style is only applied to the Button</Label>
        <CheckBox>Yes only to the Button</CheckBox>
    </StackPanel>
</Window>
