<Window x:Class="Chapter12_EventSetters.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    
    
    <Window.Resources>
        <!-- You can set event handlers via styles as well, using the EventSetter element-->
        <Style TargetType="Button">
            <EventSetter Event="MouseEnter" Handler="ChangeValue_OnEnter"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Button Width="50" Height="50">0</Button>
    </Grid>
</Window>
