<Page x:Class="Chapter14_PageNavigation.Page1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Simple Page Number 1">
    <!-- At runtime this page is hosted by a NavigationWindow object.
    When the compiler detects that the StartupUri of the program is a Page. It will create a
    NavigationWindow to host it.
    -->
    <StackPanel>
        <TextBlock>
            <!-- The Hyperlink elements can only be placed within TextBlock elements -->
            This is Page 1. Go to <Hyperlink NavigateUri="Page2.xaml">Page 2</Hyperlink>
        </TextBlock>
    </StackPanel>
</Page>
