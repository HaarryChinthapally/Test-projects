<Window x:Class="Chapter6_Buttons.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <Button Click="Button_Click">Click Me!</Button>
        <CheckBox Name="cb1" Margin="5,10,0,0">Option 1</CheckBox>
        <CheckBox Name="cb2" Margin="5,0,0,0">Option 2</CheckBox>
        
        <!-- By default all radio buttons within the same parent belong to the same group-->
        <RadioButton Name="rb1" Margin="5,10,0,0">One of Three</RadioButton>
        <RadioButton Name="rb2" Margin="5,0,0,0">Two of Three</RadioButton>
        <RadioButton Name="rb3" Margin="5,0,0,0">Three of Three</RadioButton>
        <!-- You can explicitly assign radio buttons to a group by using the GroupName property -->
        <RadioButton Name="rb2_1" Margin="5,10,0,0" GroupName="AnotherGroup">Another Group - One of two</RadioButton>
        <RadioButton Name="rb2_2" Margin="5,0,0,0" GroupName="AnotherGroup">Another Group - Two of two</RadioButton>
    </StackPanel>
</Window>
