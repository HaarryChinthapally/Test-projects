        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <!-- the label will display whatever is written in the Textbox control. The 
        Binding will be created in code to show what's going on behind the scenes -->
